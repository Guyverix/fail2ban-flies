[fail2ban-flies]
enabled   = true
filter    = fail2ban-flies
logpath   = /var/log/fail2ban-flies.log
maxretry  = 1
bantime   = 2592000 ;1 month
findtime  = 3600 ;1 day
action    = iptables-allports[name=fail2ban-flies]
            sendmail-whois-lines[name=fail2ban-flies, logpath=/var/log/fail2ban-flies.log]

